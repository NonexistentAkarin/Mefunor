<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.akari.mefunor">
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.akari.mefunor.Activity.GalleryActivity"
            android:theme="@style/AppTheme"
            android:label="@string/app_name">
            <intent-filter>

                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.akari.mefunor.Activity.LoginActivity"
            android:theme="@style/AppTheme.Dark" />
        <activity
            android:name="com.akari.mefunor.Activity.SignupActivity"
            android:theme="@style/AppTheme.Dark" />
        <activity
            android:name="com.akari.mefunor.Activity.ArchiveActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name="com.akari.mefunor.Activity.DetailActivity"
            android:theme="@style/AppTheme"
            android:label="@string/title_activity_detail" >
        </activity>
        <activity
            android:name="com.akari.mefunor.Activity.CameraActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme">
        </activity>
    </application>

</manifest>